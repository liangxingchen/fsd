{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "../../packages/*",
        "../../typings/*"
      ]
    },
    "target": "ES2017",
    "lib": [
      "es7",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
