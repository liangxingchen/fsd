{
  "compilerOptions": {
    // "strict": true,
    "noImplicitAny": true,
    // "strictNullChecks": true,
    // "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    // "strictPropertyInitialization": true,
    // "noImplicitThis": true,
    "alwaysStrict": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "module": "CommonJS",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "lib",
    "baseUrl": ".",
    "paths": {
      "*": [
        "packages/*",
        "typings/*"
      ]
    },
    "useDefineForClassFields": false,
    "target": "ES2022",
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
